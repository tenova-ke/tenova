model Feedback {
  id        String   @id @default(uuid())
  userId    String   // permanent ID per user (so same user always tracked)
  name      String?
  email     String?
  phone     String?
  message   String
  createdAt DateTime @default(now())

  replies   Reply[]
}

model Reply {
  id         String   @id @default(uuid())
  feedbackId String
  message    String
  fromAdmin  Boolean  @default(true)
  createdAt  DateTime @default(now())

  feedback   Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
}
