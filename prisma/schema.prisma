generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Feedback {
  id        String  @id @default(uuid())
  userId    String
  name      String?
  email     String?
  phone     String?
  message   String
  createdAt DateTime @default(now())

  replies   Reply[]
  @@index([createdAt])
}

model Reply {
  id         String   @id @default(uuid())
  feedback   Feedback @relation(fields: [feedbackId], references: [id])
  feedbackId String
  message    String
  fromAdmin  Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@index([createdAt])
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  message   String
  createdAt DateTime @default(now())

  @@index([createdAt])
}
